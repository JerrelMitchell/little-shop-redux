<header>
  <h1>Merchant Dashboard</h1>
</header>
<% @merchants.each do |merchant| %>
<main id="merchant-dashboard">
<li>
  <a href="/merchants/<%= merchant.id %>"><%= merchant.name %></a>
</li>
  <section id="merchant-total-items">
    <h4 class="dashboard-heading">Item Count</h4>
    <h5 class="merchant-item-metric"><%= merchant.items.count %></h5>
  </section>
  <section id="merchant-average-item-price">
    <h4 class="dashboard-heading">Average Item Price</h4>
    <h5 class="item-metric">$<%= Merchant.average_item_price(merchant) %></h5>
  </section>
  <section id="merchant-total-item-price">
    <h4 class="dashboard-heading">Total Cost of Items</h4>
    <h5 class="item-metric">$<%= Merchant.total_item_price(merchant) %></h5>
  </section>
  <% end %>
</main>
